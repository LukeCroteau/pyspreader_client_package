{
    "python.linting.enabled": true,
    "python.linting.pylintArgs": ["--rcfile", "pylintrc"],
    "python.pythonPath": "${workspaceFolder}\\venv\\Scripts\\python.exe",
    "files.exclude": {
        "**/.git": true,         // this is a default value
        "**/.DS_Store": true,    // this is a default value

        "**/hg": true, 
        "node_modules": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": true,
        "**/*.db": true
    }
}